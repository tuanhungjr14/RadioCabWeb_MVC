@model List<Advertisment>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Advertisment
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Advertisment" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Advertisment
            </a>
        </div>
    </div>
    <table class="table  table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Advertisiment ID
                </th>
                <th>
                    Advertismnet Title
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.AdTilte))
            {
                <tr>
                    <td>
                        @obj.AdId
                    </td>
                    <td>
                        @obj.AdTilte
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>